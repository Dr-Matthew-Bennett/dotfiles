#print
snippet pr "print statement"
print(${1:variable})
$0
endsnippet

snippet prs "print string"
print("${1:text}")
$0
endsnippet

snippet prfs "print formatted string"
print(f"${1:text}")
$0
endsnippet

# functions
snippet def "define a function" b
def ${1:function name}(${2:args}):
	"""${3: doc string}"""

	$0
	return
endsnippet

# function doc string
snippet doc "write doc string"
    """
    $0

    Inputs:
        arg1:

        arg2:

    Returns:
        out1:

        out2:
    """
endsnippet

# for loops
snippet for "for loop" b
for ${1:item} in ${2:iterable}:
	$0
endsnippet

snippet foren "for enumerate loop" b
for ${1:idx},${2:item} in enumerate(${3:iterable}):
	$0
endsnippet

# list comprehension
snippet lc "list comprehension"
${1:out} = [${2:item} for $2 in ${3:iterable}]
endsnippet


# context manager
snippet with "open file with context manager" b
with open("${1:filename}") as ${2:f}:
	$0
endsnippet
