#!/bin/bash

alias sd='shutdown'

# removed and restore fzf default options (if I want to use it in an usual directory)
alias fzfcl="export FZF_DEFAULT_COMMAND='fdfind .'"
alias fzf-="export FZF_DEFAULT_COMMAND='fdfind . $HOME'"

alias skype='skypeforlinux &'

# so I don't get confused every time I forget I don't have eog installed
alias eog='feh'

# launch utorrent server
alias ut='utserver -settingspath /opt/utorrent-server-alpha-v3_3/ &'

# show pressed keys onscreen for vim youtube videos
#alias vidkeydisp='screenkey/./screenkey -p fixed -g 90%x10%+5%-10%'

# set night light temp (default=4000)
alias day='xrandr --output eDP-1 --brightness .7 && redshift -O 3500'
alias eve='xrandr --output eDP-1 --brightness .6 && redshift -O 2500'
alias night='xrandr --output eDP-1 --brightness .5 && redshift -O 1500'

instructions='INSTRUCTIONS:'
sudo_reminder='You may need to type the sudo password for the laptop mattb'
user_hint="USER: mbennett"
pass_hint='VPN PASS: the one I always use, cap first, 3 exclamations'
full_instructions="${instructions}\n${sudo_reminder}\n${user_hint}\n${pass_hint}\n"
alias uvc='echo -e ${full_instructions} && sudo /sbin/modprobe tun && sudo openconnect vpn.sipr.ucl.ac.be'

instructions='INSTRUCTIONS:'
sudo_reminder='You may need to type the sudo password for the laptop mattb'
group_choice_hint='You have to type Off_Campus_Use'
user_hint='USER: mbb18b'
first_pass_hint='VPN PASS: the one I always use, cap first, 3 exclamations'
second_pass_hint='MACHINE PASS: d*2*ef1*'
tmux_hint='tmux is messed up... type reset and hit enter \(you will not see any typing\)'
full_instructions="${instructions}\n${sudo_reminder}\n${group_choice_hint}\n${user_hint}\n${first_pass_hint}\n${second_pass_hint}\n${tmux_hint}\n"
alias ugc='echo -e ${full_instructions} && sudo /sbin/modprobe tun && sudo openconnect gucsasa1.cent.gla.ac.uk'


